<div class="container" style="margin-top:20px">

    
<% count=1%>


<h1>Assignments</h1>

<%= link_to "New Assignment", new_assignment_path  %>
<table class="table table-striped table-hover">
   <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Assignment Name</th>
      <th scope="col">URL</th>
      <th scope="col">Created At</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
 <% @assignments.each do |assignment| %>
    <tr>
      <th scope="row"><%=count %> <%=assignment.id %></th>
      <td><%= assignment.name %></td>
      <td><%= link_to assignment.url,  assignment.url%></td>
      <td><%= assignment.created_at %></td>
      <td>
            <%= link_to "show", assignment_path(assignment)  %></td>
         <td>     <%= link_to("edit", edit_assignment_path(assignment)) %></td> 
   <td>   <%= button_to 'Delete', assignment_path(assignment), method: 'delete', data: { confirm: 'Are you sure?' } %></td>       
    </tr>
    <% count=count+1 %>
   <% end %>
  </tbody>
</table>

 

    


</div>




 