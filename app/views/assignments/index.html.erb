<div class="container" style="margin-top:20px">

   
<% count=1%>


<h1>Assignments</h1>


<%= link_to "New Assignment", new_assignment_path , class:"btn btn-primary  ", style:"width:150px"   %>
 <div class="row">
<div class="col mx-md-auto">
<table class="table table-striped table-hover">
   <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Assignment Name</th>
      <th scope="col">URL</th>
      <th scope="col">Created At</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
 <% @assignments.each do |assignment| %>
    <tr>
      <th scope="row"><%=count %>  </th>
      <td><%= assignment.name %></td>
      <td><%= link_to assignment.url,  assignment.url%></td>
      <td><%= assignment.created_at %></td>
      <td>
      
     

 
       <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" href="#" id="navbarDropdown1" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Actions 
          </button>
          <ul class="dropdown-menu  " aria-labelledby="navbarDropdown1">
            <li>     <%= link_to "show", assignment, class: "dropdown-item"  %></li>
            <li>   <%= link_to("edit", edit_assignment_path(assignment), class: "dropdown-item" )  %></li>
            
            <li><%= button_to 'Delete', assignment, method: 'delete', data: { confirm: 'Are you sure?' } ,  class: "dropdown-item"%></li>
          </ul>
        </div>
    
      </td>  
    </tr>
    <% count=count+1 %>
   <% end %>
  </tbody>
</table>

 

</div>
    
</div>

</div>



<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newAssignmentModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="newAssignmentModal" tabindex="-1" aria-labelledby="newAssignmentModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newAssignmentModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
